<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.scrollReveal">
            <arguments>
                <argument name="selectors" xsi:type="array">
                    <item name="easycatalogimg" xsi:type="string">.scroll-reveal-container .easycatalogimg .item</item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="easycatalogimg" xsi:type="string">Swissup_Easycatalogimg/js/easycatalogimg</item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
